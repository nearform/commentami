{
  "name": "@nearform/comments",
  "version": "0.1.0",
  "private": true,
  "description": "Comments",
  "license": "MIT",
  "author": "nearForm Ltd",
  "contributors": [
    "Filippo De Santis (https://github.com/p16)",
    "Davide Fiorello (https://github.com/codeflyer)",
    "Paolo Insogna (https://github.com/ShogunPanda)"
  ],
  "homepage": "https://github.com/nearform/comments#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/comments.git"
  },
  "bugs": {
    "url": "https://github.com/nearform/comments/issues"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "main": "lib/index.js",
  "bin": {
    "comments-backend-hapi-server": "start.js"
  },
  "scripts": {
    "depcheck": "lerna run depcheck",
    "doc:lint": "remark .",
    "coverage": "lerna run coverage",
    "lint": "eslint --ignore-path .gitignore **/*.js **/*.jsx",
    "outdated:all": "npm outdated || echo 'Outdated packages found.'; lerna exec \"npm outdated || echo 'Outdated packages found.'\"",
    "pg:init": "cd packages/comments-backend-core && npm run pg:init",
    "pg:test:init": "cd packages/comments-backend-core && npm run pg:test:init",
    "pg:migrate": "cd packages/comments-backend-core && npm run pg:migrate",
    "postinstall": "lerna bootstrap",
    "sanity:environment": "npm run doc:lint && npm run lint && npm run depcheck",
    "sanity": "npm run sanity:environment && npm run test",
    "start": "cd packages/comments-backend-hapi-server && npm run start",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "^4.19.4",
    "depcheck": "^0.6.9",
    "husky": "^1.0.0-rc.2",
    "lerna": "^2.11.0",
    "remark-cli": "^5.0.0",
    "remark-lint": "^6.0.1",
    "remark-preset-lint-recommended": "^3.0.1"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      [
        "remark-lint-list-item-indent",
        false
      ]
    ]
  },
  "standard": {
    "ignore": [
      "docs/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run sanity"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
